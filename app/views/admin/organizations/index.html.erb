<h2>Organizações</h2>

<% if @admin_organizations.empty? %>
  <p>Nenhuma organização cadastrada</p>
<% else %>
  
  <% @admin_organizations.each do |org| %>
    <h3><%= org.name %></h3>

    <% if org.athletes.empty? %>
      <p>Não existem atletas cadastrados nesta organização</p>
    <% else %>

      <h4>Atletas</h4>

      <ul>
        <% org.athletes.each do |atl| %>
          <li><%= atl.name %></li>
        <% end %>
      </ul>

    <% end %>

    <h4>Representantes</h4>

    <p>To be implemented...</p>          

    <p class="links">
      <%= link_to 'Exibir detalhes', org %> |
      <%= link_to 'Editar', edit_admin_organization_path(org) %> |
      <%= link_to 'Apagar', org, confirm: 'Tem certeza disso?', method: :delete %>
    </p>

  <% end %>

<% end %>

<br />

<%= link_to 'Nova organização', new_admin_organization_path %>
